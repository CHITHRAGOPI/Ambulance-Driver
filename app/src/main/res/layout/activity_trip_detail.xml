<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorLightGRey"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<include layout="@layout/toolbar"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:background="@color/colorLightGRey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:text="Location"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:id="@+id/trip_UserAddress_text"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:text="Vehicle No"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />



            <TextView
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:id="@+id/trip_userVehicle_text"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:text="Time"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:id="@+id/trip_time_text" />




            <TextView
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:text="Hospital Name"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:id="@+id/trip_hospitalName_text"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:text="Addresss"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />



            <TextView
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:id="@+id/trip_hospitalAddress_text"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </androidx.cardview.widget.CardView>


        <Button
            android:layout_width="wrap_content"
            android:id="@+id/trip_approve_button"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/rc_rectangle"
            android:text="Accept "
            android:onClick="accept"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"

            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>

</LinearLayout>


