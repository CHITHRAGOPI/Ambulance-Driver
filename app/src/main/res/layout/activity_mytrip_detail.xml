<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorLightGRey"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_height="wrap_content">



            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:background="@color/colorLightGRey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="18sp"
                        android:text="Hospital Name"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:id="@+id/mytrip_hospitalName_text"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:text="Addresss"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:id="@+id/mytrip_hospitalAddress_text"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:text="Time"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:id="@+id/mytrip_time_text" />

                    <View
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGRey"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:gravity="center|left"
                            android:text="Current Location - Accident Location"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_weight="0.1"
                            android:id="@+id/accidentButtonMap"
                            android:text="Map"
                            android:textColor="@color/colorPrimary"

                            android:background="@drawable/rounded_border"
                            android:layout_height="40dp"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:gravity="center|left"

                            android:text="Accident location - Hospital"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_weight="0.1"
                            android:text="Map"
                            android:id="@+id/accidentHospitalButton"
                            android:textColor="@color/colorPrimary"

                            android:background="@drawable/rounded_border"
                            android:layout_height="40dp"/>



                    </LinearLayout>

                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/trip_complete_button"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/rc_rectangle"
                android:gravity="center"
                android:paddingLeft="48dp"
                android:paddingRight="48dp"
                android:text="Completed "

                android:textColor="@color/colorWhite" />



            <Button
                android:id="@+id/update_payment_button"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/rc_rectangle"
                android:gravity="center"
                android:paddingLeft="48dp"
                android:paddingRight="48dp"
                android:text="Payment Status "

                android:textColor="@color/colorWhite" />





        </LinearLayout>
    </ScrollView>

</LinearLayout>


